<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 연결 상태 및 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="연결" />

            <TextView
                android:id="@+id/tvConnectionStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="연결 안됨"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>

        <!-- 적재 시작 버튼 -->
        <Button
            android:id="@+id/btnStartLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="적재 시작"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:layout_marginBottom="16dp"
            android:enabled="false" />

        <!-- 운행 제어 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnStartDriving"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="운행 시작"
                android:backgroundTint="@android:color/holo_green_dark"
                android:layout_marginEnd="8dp"
                android:enabled="false" />
            <Button
                android:id="@+id/btnStopDriving"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="운행 종료"
                android:backgroundTint="@android:color/holo_red_dark"
                android:visibility="gone"
                android:layout_marginEnd="8dp"/>
            <Button
                android:id="@+id/btnResetInit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="초기값 재설정"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:enabled="false" />
        </LinearLayout>

        <!-- 레이저 센서 데이터 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레이저 센서"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginBottom="16dp">

            <!-- Top Left -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:background="@android:drawable/edit_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Left"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvDistTL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거리: -- mm" />
            </LinearLayout>

            <!-- Top Right -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:background="@android:drawable/edit_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Right"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvDistTR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거리: -- mm" />

                <TextView
                    android:id="@+id/tvTempTR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="온도: -- °C" />
            </LinearLayout>

            <!-- Bottom Left -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:background="@android:drawable/edit_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bottom Left"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvDistBL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거리: -- mm" />
                <TextView
                    android:id="@+id/tvTempBL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="온도: -- °C" />
            </LinearLayout>

            <!-- Bottom Right -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:background="@android:drawable/edit_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bottom Right"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvDistBR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거리: -- mm" />

                <TextView
                    android:id="@+id/tvTempBR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="온도: -- °C" />
            </LinearLayout>
        </GridLayout>

        <!-- IMU 센서 데이터 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IMU 센서"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvAccelX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X축 가속도: -- m/s²" />
            <TextView
                android:id="@+id/tvAccelY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y축 가속도: -- m/s²" />
            <TextView
                android:id="@+id/tvAccelZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z축 가속도: -- m/s²" />
            <TextView
                android:id="@+id/tvSlope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기울기: --°"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/tvTempIMU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMU 온도: -- °C" />
        </LinearLayout>

        <!-- 추정 무게 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추정 무게"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvState"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--"
                android:textSize="16sp"
                android:gravity="end"
                android:textColor="@android:color/holo_blue_dark" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-- kg"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="20dp"
            android:background="@android:drawable/edit_text"
            android:textColor="@android:color/holo_green_dark" />

    </LinearLayout>
</ScrollView>